<%= form_tag(post_login_users_path, method: "post") do %>
  <div>
  	<%= label_tag(:login, "Username:") %>
  	<%= text_field_tag(:login) %>
  	<br />
  	<%= label_tag(:password, "Password:") %>
  	<%= password_field_tag(:password) %>
  	<br />
  </div>
  <br />
  <%= submit_tag("Log In") %>
<% end %>